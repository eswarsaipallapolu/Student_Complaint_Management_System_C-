<Application x:Class="StudentComplaintSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StudentComplaintSystem"
             xmlns:converters="clr-namespace:StudentComplaintSystem.Converters"
             xmlns:views="clr-namespace:StudentComplaintSystem.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <views:ComboBoxItemConverter x:Key="ComboBoxItemConverter"/>

        <!-- Light Mode Colors -->
        <SolidColorBrush x:Key="LightPrimaryColor" Color="#1E3A8A"/>
        <!-- Deep Blue -->
        <SolidColorBrush x:Key="LightSecondaryColor" Color="#3B82F6"/>
        <!-- Lighter Blue -->
        <SolidColorBrush x:Key="LightSuccessColor" Color="#10B981"/>
        <!-- Green -->
        <SolidColorBrush x:Key="LightErrorColor" Color="#EF4444"/>
        <!-- Red -->
        <SolidColorBrush x:Key="LightHeadingColor" Color="#1E293B"/>
        <!-- Dark Slate -->
        <SolidColorBrush x:Key="LightTextColor" Color="#475569"/>
        <!-- Slate Gray -->
        <SolidColorBrush x:Key="LightCardBackground" Color="White"/>
        <SolidColorBrush x:Key="LightHomePageBackground" Color="#E5E7EB"/>
        <!-- Gray-200 -->
        <LinearGradientBrush x:Key="LightBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#E0F2FE" Offset="0.0"/>
            <!-- Light Blue -->
            <GradientStop Color="#F8FAFC" Offset="1.0"/>
            <!-- Off-White -->
        </LinearGradientBrush>
        <SolidColorBrush x:Key="LightBorderColor" Color="#E5E7EB"/>
        <!-- Gray-200 -->

        <!-- Dark Mode Colors -->
        <SolidColorBrush x:Key="DarkPrimaryColor" Color="#60A5FA"/>
        <!-- Light Blue -->
        <SolidColorBrush x:Key="DarkSecondaryColor" Color="#93C5FD"/>
        <!-- Very Light Blue -->
        <SolidColorBrush x:Key="DarkSuccessColor" Color="#34D399"/>
        <!-- Green -->
        <SolidColorBrush x:Key="DarkErrorColor" Color="#F87171"/>
        <!-- Red -->
        <SolidColorBrush x:Key="DarkHeadingColor" Color="#F3F4F6"/>
        <!-- Light Gray -->
        <SolidColorBrush x:Key="DarkTextColor" Color="#D1D5DB"/>
        <!-- Gray-300 -->
        <SolidColorBrush x:Key="DarkCardBackground" Color="#374151"/>
        <!-- Gray-700 -->
        <SolidColorBrush x:Key="DarkHomePageBackground" Color="#1F2937"/>
        <!-- Gray-800 -->
        <LinearGradientBrush x:Key="DarkBackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1F2937" Offset="0.0"/>
            <!-- Dark Gray -->
            <GradientStop Color="#111827" Offset="1.0"/>
            <!-- Darker Gray -->
        </LinearGradientBrush>
        <SolidColorBrush x:Key="DarkBorderColor" Color="#4B5563"/>
        <!-- Gray-600 -->

        <!-- Dynamic Colors (Default to Light Mode) -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#1E3A8A"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="HeadingColor" Color="#1E293B"/>
        <SolidColorBrush x:Key="TextColor" Color="#475569"/>
        <SolidColorBrush x:Key="CardBackground" Color="White"/>
        <SolidColorBrush x:Key="HomePageBackground" Color="#E5E7EB"/>
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#E0F2FE" Offset="0.0"/>
            <GradientStop Color="#F8FAFC" Offset="1.0"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>

        <!-- Global Styles -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" Opacity="0.2" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SecondaryColor}"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White" Direction="0" ShadowDepth="0" Opacity="0.5" BlurRadius="8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1E40AF"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeadingStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource HeadingColor}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="320" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>